- content_for :title, t('change_your_password')

.row
  .column.column--center.medium-6.large-6
    %h2.heading
      = t('change_your_password')

    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-wrapper' }) do |f|

      = devise_error_messages!

      = f.hidden_field :reset_password_token

      .form-set
        = f.label :password, 'New password'
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autofocus: true, autocomplete: 'off', class: 'input'

      .form-set
        = f.label :password_confirmation, 'Confirm new password'

        = f.password_field :password_confirmation, autocomplete: 'off', class: 'input'

      .form-set
        = f.submit t('change_your_password'), class: 'button'

    = render 'users/shared/links'