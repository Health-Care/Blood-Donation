- content_for :title, t('resend_confirmation')

.row
  .column.column--center.medium-6.large-6
    %h2
      = t('resend_confirmation')

    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|

      = devise_error_messages!

      .form-set
        = f.label :email, class: 'label'
        = f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'input'

      .form-set
        = f.submit t('resend_confirmation'), class: 'button'

    = render 'users/shared/links'