- content_for :title, t('login_title')

.row
  .column.column--center.medium-6.large-6
    %h2.heading
      = t('login_title')

    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-wrapper' }) do |f|

      = render 'layouts/messages'

      .form-set
        = f.label :email, class: 'label'
        = f.email_field :email, autofocus: true, class: 'input'

      .form-set
        = f.label :password, class: 'label'
        = f.password_field :password, autocomplete: 'off', class: 'input'

      - if devise_mapping.rememberable?
        .form-set
          = f.check_box :remember_me
          = f.label :remember_me, class: 'label'

      .form-set
        = f.submit t('login_button_label'), class: 'button expand info large'

    = render 'users/shared/links'